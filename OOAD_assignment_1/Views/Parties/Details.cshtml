@model OOAD_assignment_1.ViewModels.PartyDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Party</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Party.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Party.Name)
        </dd>
    </dl>

    <table>
        <thead>
        <tr>
            <th>Commisioner:</th>
            <th>Accountable:</th>
        </tr>
        </thead>
        @foreach (var acc in Model.Accountabilities)
        {
            <tr>
                <td>
                    @acc.Accountable.Name
                </td>
                <td>
                    @acc.Commissioner.Name
                </td>
            </tr>

        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Party.PartyId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
